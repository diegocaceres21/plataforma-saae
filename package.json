{
  "name": "plataforma-saae",
  "version": "0.1.3",
  "description": "Plataforma SAAE - Aplicaci√≥n de escritorio",
  "main": "main.js",
  "author": "UCB - Inteligencia de Negocios",
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "electron:start": "electron .",
    "electron:dev": "npm-run-all -p start electron:start",
    "electron:build": "npm run build && electron-builder",
    "electron:release": "npm run build && electron-builder --publish always"
  },
  "prettier": {
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "build": {
    "appId": "bo.ucb.plataforma.saae",
    "productName": "Plataforma SAAE",
    "directories": {
      "buildResources": "build"
    },
    "files": [
      "dist/plataforma-saae/browser/**",
      "main.js",
      "preload.js",
      "electron-backend/**/*",
      "externalApi/**/*",
      "tokenStore.js",
      "package.json"
    ],
    "asar": true,
    "extraMetadata": {
      "main": "main.js"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "build/icons/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Plataforma SAAE"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "diegocaceres21",
        "repo": "plataforma-saae",
        "releaseType": "draft"
      }
    ]
  },
  "dependencies": {
    "@angular/common": "^20.1.0",
    "@angular/compiler": "^20.1.0",
    "@angular/core": "^20.1.0",
    "@angular/forms": "^20.1.0",
    "@angular/platform-browser": "^20.1.0",
    "@angular/router": "^20.1.0",
    "@tailwindcss/postcss": "^4.1.13",
    "axios": "^1.12.0",
    "bcryptjs": "^3.0.2",
    "dotenv": "^17.2.2",
    "jsonwebtoken": "^9.0.2",
    "jspdf": "^3.0.2",
    "jspdf-autotable": "^5.0.2",
    "pg": "^8.16.3",
    "postcss": "^8.5.6",
    "rxjs": "~7.8.0",
    "tailwindcss": "^4.1.13",
    "tslib": "^2.3.0",
    "xlsx": "^0.18.5",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "electron-updater": "^6.3.9",
    "electron-builder": "^25.1.8",
    "npm-run-all": "^4.1.5",
    "@angular/build": "^20.1.5",
    "@angular/cli": "^20.1.5",
    "@angular/compiler-cli": "^20.1.0",
    "@types/jasmine": "~5.1.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/jspdf": "^1.3.3",
    "electron": "^38.0.0",
    "jasmine-core": "~5.8.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "typescript": "~5.8.2"
  }
}
